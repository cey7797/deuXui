}

/*********************************************************************
 * 함 수 명 	: fn_callFunction
 * 함수설명 	: 펑션 호출하기
 *********************************************************************/
this.fn_callFunction = function(fncNm)
{
	var parentStr = this.gfn_searchParent(fncNm);
	var strValue = true;
	
	if(this.gfn_isNull(eval("this." + parentStr)[fncNm])==false)
	{
		strValue = eval("this." + parentStr +"."+fncNm+"(this)");
	}
	
	return strValue;
}]]></Script>
