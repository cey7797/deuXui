}


/*----------------------------------------------------------------------------------------------
 * 설명   : fn_SetCalendar
 * return  : void
-----------------------------------------------------------------------------------------------*/
this.fn_SetCalendar = function(strYY,strMM)
{ 
	if(!gfn_isDate(strYY+strMM+"01")){
		return false;
	} 

	this.PopMonth.stcYear.set_text(strYY);

	lv_selYear = strYY;
	lv_selMonth = strMM;
	
	eval("this.PopMonth.btnM" + strMM +".setFocus();");
	
}





